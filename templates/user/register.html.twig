{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
            <h1 class="text-2xl font-bold mb-6 text-center">Register</h1>
            {{ form_start(form) }}
            
            {% for field in form %}
                <div class="mb-4">
                    {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_errors(field, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>
            {% endfor %}
            
            <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded w-full">Register</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

